.main
	height: 100vh
	max-height 1080px
	&__slide
		height 100vh
		width 100vw
		background url(../img/main/main_bg.png) 0 0 no-repeat
		background-size cover
	&__slide-content
		height 100vh
		max-width 900px
		padding-top 120px
		margin 0 auto
		padding-bottom 20px
		text-align center
		point-events auto
	&__button-prev
		left 80px
		background-image url(../img/main/arrow.svg)
		outline none
	&__button-next
		right 80px
		background-image url(../img/main/next.svg)
		outline none
	&__title
		font-size 32px
		text-transform uppercase
		color #28363d
		font-weight bold
		letter-spacing 16.5px
	&__separator
		content url('../img/main/separator_1024.png')
		margin 0 auto
	&__subtitle
		font-size 18px
		text-transform uppercase
		font-weight 400
		margin-bottom 60px
	&__button
		padding 18px 28px
		font-size 18px
		font-weight bold
		cursor pointer
	&__pagination 
		.swiper-pagination-bullet
			height 18px
			width 18px
			&-active
				background-color #ff8207
	&__link-to-down
		position absolute
		content url(../img/main/icon_arrow.svg)
		padding 22px 18px
		border-radius 50%
		background-color #28363d
		bottom 20px
		left 50%
		transform translateX(-50%)
		z-index 2
		opacity 0.6
	.swiper-container-horizontal > .swiper-pagination-bullets
		bottom 120px
@media screen and (min-width 320px) and (max-width 768px)
	.main
		&__slide-content
			padding 120px 40px 40px 40px
			text-align center
		&__title
			margin 0
			font-size 18px
			letter-spacing 11.5px
			margin-bottom 20px
		&__separator
			content url('../img/main/separator_320.png')
			margin-bottom 20px
		&__subtitle
			font-size 16px
		&__button
			padding 14px 20px
		&__button-prev,
		&__button-next
			display none
		&__pagination
			bottom 90px!important
@media screen and (min-width 769px) and (max-width 1024px)
	.main
		&__slide-content
			padding 120px 100px
			padding-bottom 20px
		&__separator
			content url('../img/main/separator_768.png')
@media screen and (min-width: 1400px) and (min-height: 1080px)
	.main
		&__title
			margin-top 0
			font-size 48px
		&__subtitle
			font-size 24px
			margin-bottom 140px
		&__button
			padding 28px 38px
			font-size 32px
	.swiper-container-horizontal > .swiper-pagination-bullets,
	.swiper-pagination-custom,
	.swiper-pagination-fraction
		bottom 200px
			
			