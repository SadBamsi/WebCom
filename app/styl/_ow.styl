.work
	padding 55px 50px
	padding-bottom 20px
	height 100vh
	max-height 1080px
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	align-items center
	background url(../img/work/work_bg.png) 0 0 no-repeat
	background-size cover
	text-align center
	overflow hidden
	&__subtitle
		margin 0
		margin-bottom 30px
	&__item 
		height 45%
		width 30%
		max-height 320px
		max-width 460px		
		cursor pointer
		position relative
		&:hover 
			>.work__item-wrapper
				opacity 1				 
		&:nth-of-type(3n)
			margin-right 0
		&:nth-of-type(n + 4)
			margin-bottom 0
		img
			display block
			height 100%
			width 100%  
	&__item-wrapper
		position absolute
		width 100%
		bottom 0	
		height 40%
		background-color rgba(255,255,255,.8)
		padding 20px 20px
		text-align left
		opacity 0
		transition opacity .6s ease-in
		right 0
	.item-wrapper__title
		position relative
		color #28363d
		font-size 18px
		font-weight 700
		line-height 36px
		text-transform uppercase
		letter-spacing 1.08px
		margin 0
		margin-bottom 10px
		&:after
			content url(../img/work/separator.png)
			color #ff8207
			position absolute
			bottom -20px
			left 0
	.item-wrapper__desc
		margin 0
		color #7b7b7b
		font-family "Myriad Pro"
		font-size 16px
		font-weight 400
		line-height 36px
		text-transform uppercase
		letter-spacing 0.96px
	&__examples-area
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		display none
.mobile-slider
	width 100%
	height 100%
	

@media screen and (min-width 320px) and (max-width 768px)
	.work
		padding-top 120px		

		
		
	